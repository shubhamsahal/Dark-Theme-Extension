{
    "name": "Dark Reader",
    "version": "0.0.1",
    "icons" : {
        "16" : "icon_1.png",
        "48" : "icon_1.png",
        "128" :"icon_1.png"
       },
    "manifest_version": 2,
    "description": "Bored of looking at websites the same way? Meet Dark Reader, a chrome extension that can change your website from Light mode to Dark Mode ",
    "background": {
        "scripts": [
            "popup.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_title": "Invert.io",
        "default_popup": "popup.html"
    },
    "permissions": [
        "https://*/*",
        "http://*/*",
        "tabs"
    ]
}